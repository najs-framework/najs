{
  "name": "najs",
  "version": "0.2.10",
  "scripts": {
    "build": "npm run build-ts && npm run tslint",
    "build-ts": "tsc -d",
    "coverage": "npm run build && jest ./dist/test --coverage --forceExit",
    "test": "jest ./dist/test --forceExit",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "prepublishOnly": "tsc -d -p ./ --outDir dist"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json",
        "skipBabel": true
      }
    },
    "moduleFileExtensions": ["js", "ts", "json"],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": ["**/test/**/*.test.ts", "**/test/**/*.test.js"],
    "testEnvironment": "node"
  },
  "files": ["dist/**/*"],
  "main": "./dist/lib/index.js",
  "types": "./dist/lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/najs-framework/najs.git"
  },
  "author": {
    "name": "Nhat Phan",
    "email": "nhat@ntworld.net"
  },
  "license": "MIT",
  "engines": {
    "node": ">=8.7"
  },
  "peerDependencies": {
    "body-parser": "^1.18.2",
    "config": "^1.29.2",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "csurf": "^1.9.0",
    "express": "^4.16.2",
    "express-handlebars": "^3.0.0",
    "handlebars": "^4.0.11",
    "redis": "^2.8.0",
    "winston": "^2.4.0"
  },
  "dependencies": {
    "collect.js": "^4.0.4",
    "joi": "^13.1.1",
    "lodash": "^4.17.4",
    "path-to-regexp": "^2.1.0",
    "winston": "^2.4.0"
  },
  "devDependencies": {
    "@types/config": "^0.0.33",
    "@types/cookie-parser": "^1.4.1",
    "@types/cors": "^2.8.3",
    "@types/csurf": "^1.9.35",
    "@types/express": "^4.11.0",
    "@types/express-handlebars": "^0.0.30",
    "@types/handlebars": "^4.0.36",
    "@types/jest": "^21.1.8",
    "@types/joi": "^13.0.5",
    "@types/lodash": "^4.14.91",
    "@types/redis": "^2.8.5",
    "@types/sinon": "^4.1.2",
    "@types/winston": "^2.3.7",
    "body-parser": "^1.18.2",
    "config": "^1.29.2",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "coveralls": "^3.0.0",
    "csurf": "^1.9.0",
    "express": "^4.16.2",
    "express-handlebars": "^3.0.0",
    "handlebars": "^4.0.11",
    "jest": "^21.2.1",
    "redis": "^2.8.0",
    "sinon": "^4.1.3",
    "ts-jest": "^21.2.3",
    "tslint": "^5.8.0",
    "typescript": "^2.6.2"
  }
}
